<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header class="site-header">
            <nav class="navbar">
                <div class="logo">
                    <a href="{{ path('me') }}">MySite</a>
                </div>
                <ul class="nav-links">
                    <li><a href="{{ path('me') }}">Me</a></li>
                    <li><a href="{{ path('about') }}">About</a></li>
                    <li><a href="{{ path('lucky_number') }}">Lucky Number</a></li>
                    <li><a href="{{ path('report') }}">Report</a></li>
                    <li><a href="{{ path('api_landing') }}">API</a></li>
                </ul>
            </nav>
        </header>

        <main class="site-main">
            {% block body %}{% endblock %}
        </main>

        <footer class="site-footer">
            <p>&copy; 2025 | Cornelia Bj√∂rn | Kurs: MVC | <a href="#">Till toppen</a></p>
        </footer>
    </body>
</html>
